{% extends "layout.twig" %}

{% set active = 'companies' %}

{% block title %}Companies - Job Dating Admin{% endblock %}

{% block content %}
<div class="header">
    <h1><i class="fas fa-building"></i> Companies</h1>
    <a href="/AddCompany/new" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add Company
    </a>
</div>

{% if all is empty %}
<div class="card">
    <div class="empty-state">
        <i class="fas fa-building"></i>
        <h3>No Companies Yet</h3>
        <p>Start by adding your first company</p>
        <a href="/AddCompany/new" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add Company
        </a>
    </div>
</div>
{% else %}
<div class="cards-grid">
    {% for company in all %}
    <div class="card">
        <div class="card-header">
            <i class="fas fa-building"></i>
            {{ company.name }}
        </div>
        <div class="card-body">
            <div class="card-info">
                <i class="fas fa-industry"></i>
                <span>{{ company.sector }}</span>
            </div>
            <div class="card-info">
                <i class="fas fa-map-marker-alt"></i>
                <span>{{ company.location }}</span>
            </div>
            <div class="card-info">
                <i class="fas fa-envelope"></i>
                <span>{{ company.email }}</span>
            </div>
            <div class="card-info">
                <i class="fas fa-phone"></i>
                <span>{{ company.phone }}</span>
            </div>
        </div>
        <div class="card-actions">
            <a href="/Company/Edit/{{ company.id }}" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a href="/Company/Delete/{{ company.id }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this company?')">
                <i class="fas fa-trash"></i> Delete
            </a>
        </div>
    </div>
    {% endfor %}
</div>
{% endif %}
{% endblock %}