{% extends "layout.twig" %}

{% set active = 'companies' %}

{% block title %}Companies - Job Dating Admin{% endblock %}

{% block content %}
<div class="header">
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <h1><i class="fas fa-building"></i> Companies</h1>
        <a href="/AddCompany/new" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add Company
        </a>
    </div>
</div>

<div class="card">
    <table>
        <thead>
            <tr>
                <th><i class="fas fa-hashtag"></i> ID</th>
                <th><i class="fas fa-building"></i> Name</th>
                <th><i class="fas fa-industry"></i> Sector</th>
                <th><i class="fas fa-map-marker-alt"></i> Location</th>
                <th><i class="fas fa-envelope"></i> Email</th>
                <th><i class="fas fa-phone"></i> Phone</th>
                <th><i class="fas fa-cog"></i> Actions</th>
            </tr>
        </thead>
        <tbody>
            {% if all is empty %}
                <tr>
                    <td colspan="7" style="text-align: center; padding: 40px; color: #b0b0b0;">
                        <i class="fas fa-inbox" style="font-size: 48px; margin-bottom: 10px; display: block; opacity: 0.3;"></i>
                        No companies found
                    </td>
                </tr>
            {% else %}
                {% for company in all %}
                <tr style="transition: all 0.3s ease;">
                    <td style="font-weight: 600; color: #ff6b6b;">{{ company.id }}</td>
                    <td style="font-weight: 600;">{{ company.name }}</td>
                    <td>
                        <span style="padding: 6px 14px; background: linear-gradient(135deg, rgba(255, 154, 86, 0.2), rgba(255, 99, 72, 0.2)); border-radius: 20px; font-size: 12px; font-weight: 600; color: #ffb088;">
                            {{ company.sector }}
                        </span>
                    </td>
                    <td><i class="fas fa-map-marker-alt" style="color: #ff6b6b; margin-right: 5px;"></i>{{ company.location }}</td>
                    <td><i class="fas fa-envelope" style="color: #ff9a56; margin-right: 5px;"></i>{{ company.email }}</td>
                    <td><i class="fas fa-phone" style="color: #ff9a56; margin-right: 5px;"></i>{{ company.phone }}</td>
                    <td style="white-space: nowrap;">
                        <a href="/Company/Edit/{{ company.id }}" class="btn btn-warning" style="margin-right: 10px;">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a href="/Company/Delete/{{ company.id }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this company?')">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
                {% endfor %}
            {% endif %}
        </tbody>
    </table>
</div>

<style>
    @keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(-20px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    tbody tr {
        animation: slideIn 0.3s ease-out;
    }

    tbody tr:hover {
        background: rgba(255, 107, 107, 0.1) !important;
        transform: scale(1.01);
    }
</style>
{% endblock %}