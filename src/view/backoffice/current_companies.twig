{% extends "layout.twig" %}

{% set active = 'companies' %}

{% block title %}Companies - Job Dating Admin{% endblock %}

{% block content %}
<div class="animated-background">
    <div class="gradient-orb orb-1"></div>
    <div class="gradient-orb orb-2"></div>
    <div class="gradient-orb orb-3"></div>
</div>

<div class="header-modern">
    <div class="header-content">
        <div>
            <h1><i class="fas fa-building"></i> Companies</h1>
            <p class="subtitle">Manage your partner companies</p>
        </div>
        <a href="/AddCompany/new" class="btn-modern btn-primary-modern">
            <i class="fas fa-plus"></i> Add Company
        </a>
    </div>
</div>

<div class="cards-container">
    {% if all is empty %}
        <div class="empty-state">
            <div class="empty-icon">
                <i class="fas fa-building"></i>
            </div>
            <h2>No Companies Yet</h2>
            <p>Start by adding your first company</p>
            <a href="/AddCompany/new" class="btn-modern btn-primary-modern">
                <i class="fas fa-plus"></i> Add First Company
            </a>
        </div>
    {% else %}
        {% for company in all %}
        <div class="company-card">
            <div class="company-icon">
                <i class="fas fa-building"></i>
            </div>
            
            <h3 class="company-name">{{ company.name }}</h3>
            
            <div class="sector-badge">
                <i class="fas fa-industry"></i>
                {{ company.sector }}
            </div>
            
            <div class="company-details">
                <div class="detail-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>{{ company.location }}</span>
                </div>
                <div class="detail-item">
                    <i class="fas fa-envelope"></i>
                    <span>{{ company.email }}</span>
                </div>
                <div class="detail-item">
                    <i class="fas fa-phone"></i>
                    <span>{{ company.phone }}</span>
                </div>
            </div>
            
            <div class="card-actions">
                <a href="/Company/Edit/{{ company.id }}" class="btn-modern btn-edit">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a href="/Company/Delete/{{ company.id }}" class="btn-modern btn-delete" onclick="return confirm('Delete this company?')">
                    <i class="fas fa-trash"></i> Delete
                </a>
            </div>
        </div>
        {% endfor %}
    {% endif %}
</div>

<style>
    :root {
        --primary: #6366f1;
        --primary-dark: #4f46e5;
        --secondary: #8b5cf6;
        --accent: #ec4899;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
        --dark-bg: #0f0f23;
        --card-bg: #1a1a2e;
        --card-hover: #25253f;
        --text-primary: #e0e0e0;
        --text-secondary: #a0a0a0;
        --border: #2a2a4a;
        --cyan: #06b6d4;
        --teal: #14b8a6;
    }

    .animated-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        overflow: hidden;
        background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 100%);
    }

    .gradient-orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.4;
        animation: float 20s infinite ease-in-out;
    }

    .orb-1 {
        width: 500px;
        height: 500px;
        background: radial-gradient(circle, var(--cyan) 0%, transparent 70%);
        top: -10%;
        left: -10%;
        animation-delay: 0s;
    }

    .orb-2 {
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, var(--teal) 0%, transparent 70%);
        bottom: -10%;
        right: -10%;
        animation-delay: -7s;
    }

    .orb-3 {
        width: 350px;
        height: 350px;
        background: radial-gradient(circle, var(--primary) 0%, transparent 70%);
        top: 50%;
        left: 50%;
        animation-delay: -14s;
    }

    @keyframes float {
        0%, 100% { transform: translate(0, 0) scale(1); }
        25% { transform: translate(50px, -50px) scale(1.1); }
        50% { transform: translate(-30px, 50px) scale(0.9); }
        75% { transform: translate(40px, 30px) scale(1.05); }
    }

    .header-modern {
        margin-bottom: 40px;
        animation: slideDown 0.6s ease-out;
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 30px;
        background: linear-gradient(135deg, rgba(6, 182, 212, 0.1) 0%, rgba(20, 184, 166, 0.1) 100%);
        border-radius: 20px;
        border: 1px solid var(--border);
        backdrop-filter: blur(10px);
    }

    .header-content h1 {
        font-size: 32px;
        margin: 0 0 8px 0;
        background: linear-gradient(135deg, var(--cyan) 0%, var(--teal) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .subtitle {
        margin: 0;
        color: var(--text-secondary);
        font-size: 14px;
    }

    @keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .btn-modern {
        padding: 12px 24px;
        border-radius: 12px;
        border: none;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 14px;
    }

    .btn-primary-modern {
        background: linear-gradient(135deg, var(--cyan) 0%, var(--teal) 100%);
        color: white;
        box-shadow: 0 10px 30px rgba(6, 182, 212, 0.3);
    }

    .btn-primary-modern:hover {
        transform: translateY(-2px);
        box-shadow: 0 15px 40px rgba(6, 182, 212, 0.4);
    }

    .cards-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 24px;
        padding: 20px 0;
    }

    .company-card {
        background: var(--card-bg);
        border: 1px solid var(--border);
        border-radius: 20px;
        padding: 28px;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        animation: fadeInUp 0.5s ease-out;
        animation-fill-mode: both;
        position: relative;
        overflow: hidden;
        text-align: center;
    }

    .company-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--cyan), var(--teal), var(--primary));
        transform: scaleX(0);
        transition: transform 0.4s ease;
    }

    .company-card:hover::before {
        transform: scaleX(1);
    }

    .company-card:hover {
        transform: translateY(-8px);
        background: var(--card-hover);
        border-color: var(--cyan);
        box-shadow: 0 20px 60px rgba(6, 182, 212, 0.25);
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .company-card:nth-child(1) { animation-delay: 0.1s; }
    .company-card:nth-child(2) { animation-delay: 0.15s; }
    .company-card:nth-child(3) { animation-delay: 0.2s; }
    .company-card:nth-child(4) { animation-delay: 0.25s; }
    .company-card:nth-child(5) { animation-delay: 0.3s; }
    .company-card:nth-child(6) { animation-delay: 0.35s; }

    .company-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 20px;
        background: linear-gradient(135deg, rgba(6, 182, 212, 0.2) 0%, rgba(20, 184, 166, 0.2) 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 36px;
        color: var(--cyan);
        border: 2px solid rgba(6, 182, 212, 0.3);
        transition: all 0.3s ease;
    }

    .company-card:hover .company-icon {
        transform: scale(1.1) rotate(5deg);
        box-shadow: 0 10px 30px rgba(6, 182, 212, 0.4);
    }

    .company-name {
        font-size: 24px;
        margin: 0 0 16px 0;
        color: var(--text-primary);
        font-weight: 700;
    }

    .sector-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 18px;
        background: linear-gradient(135deg, rgba(139, 92, 246, 0.2) 0%, rgba(99, 102, 241, 0.2) 100%);
        color: var(--secondary);
        border-radius: 20px;
        font-size: 13px;
        font-weight: 700;
        border: 1px solid rgba(139, 92, 246, 0.3);
        margin-bottom: 24px;
    }

    .company-details {
        display: flex;
        flex-direction: column;
        gap: 12px;
        margin-bottom: 24px;
        padding: 20px 0;
        border-top: 1px solid var(--border);
        border-bottom: 1px solid var(--border);
    }

    .detail-item {
        display: flex;
        align-items: center;
        gap: 12px;
        color: var(--text-secondary);
        font-size: 14px;
        text-align: left;
    }

    .detail-item i {
        color: var(--cyan);
        width: 20px;
        font-size: 16px;
    }

    .detail-item span {
        flex: 1;
        word-break: break-word;
    }

    .card-actions {
        display: flex;
        gap: 10px;
    }

    .btn-edit {
        flex: 1;
        background: linear-gradient(135deg, rgba(245, 158, 11, 0.2) 0%, rgba(251, 146, 60, 0.2) 100%);
        color: var(--warning);
        border: 1px solid rgba(245, 158, 11, 0.3);
        justify-content: center;
    }

    .btn-edit:hover {
        background: linear-gradient(135deg, rgba(245, 158, 11, 0.3) 0%, rgba(251, 146, 60, 0.3) 100%);
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(245, 158, 11, 0.3);
    }

    .btn-delete {
        flex: 1;
        background: linear-gradient(135deg, rgba(239, 68, 68, 0.2) 0%, rgba(220, 38, 38, 0.2) 100%);
        color: var(--danger);
        border: 1px solid rgba(239, 68, 68, 0.3);
        justify-content: center;
    }

    .btn-delete:hover {
        background: linear-gradient(135deg, rgba(239, 68, 68, 0.3) 0%, rgba(220, 38, 38, 0.3) 100%);
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(239, 68, 68, 0.3);
    }

    .empty-state {
        grid-column: 1 / -1;
        text-align: center;
        padding: 80px 20px;
        animation: fadeIn 0.6s ease-out;
    }

    .empty-icon {
        font-size: 80px;
        color: var(--cyan);
        margin-bottom: 24px;
        opacity: 0.3;
        animation: pulse 2s infinite;
    }

    @keyframes pulse {
        0%, 100% { opacity: 0.3; transform: scale(1); }
        50% { opacity: 0.5; transform: scale(1.05); }
    }

    .empty-state h2 {
        font-size: 28px;
        margin: 0 0 12px 0;
        color: var(--text-primary);
    }

    .empty-state p {
        color: var(--text-secondary);
        margin: 0 0 24px 0;
        font-size: 16px;
    }
</style>
{% endblock %}