{% extends "layout.twig" %}

{% set active = 'ads' %}

{% block title %}Create Job Ad - Job Dating Admin{% endblock %}

{% block content %}
<div class="animated-background">
    <div class="gradient-orb orb-1"></div>
    <div class="gradient-orb orb-2"></div>
    <div class="gradient-orb orb-3"></div>
</div>

<div class="header-modern">
    <div class="header-content">
        <div>
            <h1><i class="fas fa-bullhorn"></i> Create New Job Advertisement</h1>
            <p class="subtitle">Post a new job opportunity</p>
        </div>
        <a href="/Ads" class="btn-modern btn-secondary-modern">
            <i class="fas fa-arrow-left"></i> Back to Ads
        </a>
    </div>
</div>

<div class="form-card">
    <form id="adForm" action="/Ads/Store" method="POST">
        <div class="form-group">
            <label for="title">
                <i class="fas fa-briefcase"></i> Job Title
            </label>
            <input type="text" id="title" name="title" class="form-control-modern" required placeholder="e.g., Senior Developer, Marketing Manager">
        </div>

        <div class="form-group">
            <label for="company_id">
                <i class="fas fa-building"></i> Company
            </label>
            <select id="company_id" name="company_id" class="form-control-modern" required>
                <option value="">Select company</option>
                {% for company in companies %}
                    <option value="{{ company.id }}">{{ company.name }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="form-group">
            <label for="contract_type">
                <i class="fas fa-file-contract"></i> Contract Type
            </label>
            <select id="contract_type" name="contract_type" class="form-control-modern" required>
                <option value="">Select contract type</option>
                <option value="Full-time">Full-time</option>
                <option value="Part-time">Part-time</option>
                <option value="Contract">Contract</option>
                <option value="Internship">Internship</option>
                <option value="Freelance">Freelance</option>
            </select>
        </div>

        <div class="form-group">
            <label for="location">
                <i class="fas fa-map-marker-alt"></i> Location
            </label>
            <input type="text" id="location" name="location" class="form-control-modern" required placeholder="e.g., New York, Remote, Hybrid">
        </div>

        <div class="form-group">
            <label for="description">
                <i class="fas fa-align-left"></i> Job Description
            </label>
            <textarea id="description" name="description" class="form-control-modern" rows="6" required placeholder="Enter detailed job description..."></textarea>
        </div>

        <div class="form-group">
            <label for="skills_input">
                <i class="fas fa-tools"></i> Required Skills
            </label>
            <div class="tags-container" id="tagsContainer">
                <div class="tags-list" id="tagsList"></div>
                <input type="text" id="skills_input" class="tags-input" placeholder="Type a skill and press Enter...">
            </div>
            <input type="hidden" id="skills" name="skills" required>
            <small class="form-text">Press Enter or comma to add a skill tag</small>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-modern btn-primary-modern">
                <i class="fas fa-paper-plane"></i> Publish Job Ad
            </button>
            <a href="/Ads" class="btn-modern btn-danger-modern">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>

<style>
    :root {
        --primary: #6366f1;
        --primary-dark: #4f46e5;
        --secondary: #8b5cf6;
        --accent: #ec4899;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
        --dark-bg: #0f0f23;
        --card-bg: #1a1a2e;
        --card-hover: #25253f;
        --text-primary: #e0e0e0;
        --text-secondary: #a0a0a0;
        --border: #2a2a4a;
    }

    .animated-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        overflow: hidden;
        background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 100%);
    }

    .gradient-orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.4;
        animation: float 20s infinite ease-in-out;
    }

    .orb-1 {
        width: 500px;
        height: 500px;
        background: radial-gradient(circle, var(--primary) 0%, transparent 70%);
        top: -10%;
        left: -10%;
        animation-delay: 0s;
    }

    .orb-2 {
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, var(--secondary) 0%, transparent 70%);
        bottom: -10%;
        right: -10%;
        animation-delay: -7s;
    }

    .orb-3 {
        width: 350px;
        height: 350px;
        background: radial-gradient(circle, var(--accent) 0%, transparent 70%);
        top: 50%;
        left: 50%;
        animation-delay: -14s;
    }

    @keyframes float {
        0%, 100% { transform: translate(0, 0) scale(1); }
        25% { transform: translate(50px, -50px) scale(1.1); }
        50% { transform: translate(-30px, 50px) scale(0.9); }
        75% { transform: translate(40px, 30px) scale(1.05); }
    }

    .header-modern {
        margin-bottom: 40px;
        animation: slideDown 0.6s ease-out;
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 30px;
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);
        border-radius: 20px;
        border: 1px solid var(--border);
        backdrop-filter: blur(10px);
    }

    .header-content h1 {
        font-size: 32px;
        margin: 0 0 8px 0;
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .subtitle {
        margin: 0;
        color: var(--text-secondary);
        font-size: 14px;
    }

    @keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .btn-modern {
        padding: 12px 24px;
        border-radius: 12px;
        border: none;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 14px;
    }

    .btn-primary-modern {
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        color: white;
        box-shadow: 0 10px 30px rgba(99, 102, 241, 0.3);
    }

    .btn-primary-modern:hover {
        transform: translateY(-2px);
        box-shadow: 0 15px 40px rgba(99, 102, 241, 0.4);
    }

    .btn-secondary-modern {
        background: linear-gradient(135deg, rgba(139, 92, 246, 0.2) 0%, rgba(99, 102, 241, 0.2) 100%);
        color: var(--secondary);
        border: 1px solid rgba(139, 92, 246, 0.3);
    }

    .btn-secondary-modern:hover {
        background: linear-gradient(135deg, rgba(139, 92, 246, 0.3) 0%, rgba(99, 102, 241, 0.3) 100%);
        transform: translateY(-2px);
    }

    .btn-danger-modern {
        background: linear-gradient(135deg, rgba(239, 68, 68, 0.2) 0%, rgba(220, 38, 38, 0.2) 100%);
        color: var(--danger);
        border: 1px solid rgba(239, 68, 68, 0.3);
    }

    .btn-danger-modern:hover {
        background: linear-gradient(135deg, rgba(239, 68, 68, 0.3) 0%, rgba(220, 38, 38, 0.3) 100%);
        transform: translateY(-2px);
    }

    .form-card {
        background: var(--card-bg);
        border: 1px solid var(--border);
        border-radius: 20px;
        padding: 40px;
        animation: fadeInUp 0.6s ease-out;
        max-width: 800px;
        margin: 0 auto;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .form-group {
        margin-bottom: 24px;
        animation: fadeIn 0.5s ease-out;
        animation-fill-mode: both;
    }

    .form-group:nth-child(1) { animation-delay: 0.1s; }
    .form-group:nth-child(2) { animation-delay: 0.15s; }
    .form-group:nth-child(3) { animation-delay: 0.2s; }
    .form-group:nth-child(4) { animation-delay: 0.25s; }
    .form-group:nth-child(5) { animation-delay: 0.3s; }
    .form-group:nth-child(6) { animation-delay: 0.35s; }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .form-group label {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 10px;
        color: var(--text-primary);
        font-weight: 600;
        font-size: 14px;
    }

    .form-group label i {
        color: var(--primary);
        font-size: 16px;
    }

    .form-control-modern {
        width: 100%;
        padding: 14px 16px;
        background: rgba(0, 0, 0, 0.3);
        border: 2px solid var(--border);
        border-radius: 12px;
        color: var(--text-primary);
        font-size: 14px;
        transition: all 0.3s ease;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .form-control-modern::placeholder {
        color: var(--text-secondary);
        opacity: 0.6;
    }

    .form-control-modern:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        background: rgba(0, 0, 0, 0.4);
    }

    select.form-control-modern {
        cursor: pointer;
    }

    select.form-control-modern option {
        background: #1a1a2e;
        color: #e0e0e0;
    }

    textarea.form-control-modern {
        resize: vertical;
        min-height: 120px;
    }

    .tags-container {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 8px;
        padding: 8px;
        border: 2px solid var(--border);
        border-radius: 12px;
        background: rgba(0, 0, 0, 0.3);
        min-height: 50px;
        cursor: text;
        transition: all 0.3s ease;
    }

    .tags-container:focus-within {
        border-color: var(--primary);
        box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        background: rgba(0, 0, 0, 0.4);
    }

    .tags-list {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
    }

    .tag {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 12px;
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.2) 0%, rgba(6, 182, 212, 0.2) 100%);
        color: var(--success);
        border-radius: 8px;
        font-size: 13px;
        font-weight: 600;
        border: 1px solid rgba(16, 185, 129, 0.3);
        animation: tagSlideIn 0.2s ease-out;
    }

    @keyframes tagSlideIn {
        from {
            opacity: 0;
            transform: scale(0.8);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    .tag-remove {
        cursor: pointer;
        width: 18px;
        height: 18px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background: rgba(16, 185, 129, 0.2);
        transition: background 0.2s;
        font-size: 14px;
    }

    .tag-remove:hover {
        background: rgba(16, 185, 129, 0.4);
    }

    .tags-input {
        flex: 1;
        min-width: 150px;
        border: none;
        outline: none;
        background: transparent;
        color: var(--text-primary);
        font-size: 14px;
        padding: 4px;
    }

    .tags-input::placeholder {
        color: var(--text-secondary);
        opacity: 0.6;
    }

    .form-text {
        display: block;
        margin-top: 8px;
        color: var(--text-secondary);
        font-size: 12px;
    }

    .form-actions {
        display: flex;
        gap: 12px;
        margin-top: 32px;
        padding-top: 24px;
        border-top: 1px solid var(--border);
        animation: fadeIn 0.5s ease-out 0.4s;
        animation-fill-mode: both;
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const skillsInput = document.getElementById('skills_input');
    const tagsList = document.getElementById('tagsList');
    const hiddenSkills = document.getElementById('skills');
    const tagsContainer = document.getElementById('tagsContainer');
    const form = document.getElementById('adForm');
    
    let skills = [];

    // Focus input when clicking container
    tagsContainer.addEventListener('click', function() {
        skillsInput.focus();
    });

    // Add tag function
    function addTag(skill) {
        skill = skill.trim();
        if (skill && !skills.includes(skill)) {
            skills.push(skill);
            renderTags();
            updateHiddenInput();
        }
        skillsInput.value = '';
    }

    // Render tags
    function renderTags() {
        tagsList.innerHTML = '';
        skills.forEach((skill, index) => {
            const tag = document.createElement('div');
            tag.className = 'tag';
            tag.innerHTML = `
                <span>${skill}</span>
                <span class="tag-remove" data-index="${index}">Ã—</span>
            `;
            tagsList.appendChild(tag);
        });
    }

    // Update hidden input with JSON
    function updateHiddenInput() {
        hiddenSkills.value = JSON.stringify(skills);
    }

    // Remove tag
    tagsList.addEventListener('click', function(e) {
        if (e.target.classList.contains('tag-remove')) {
            const index = parseInt(e.target.dataset.index);
            skills.splice(index, 1);
            renderTags();
            updateHiddenInput();
        }
    });

    // Handle input
    skillsInput.addEventListener('keydown', function(e) {
        if (e.key === 'Enter') {
            e.preventDefault();
            addTag(skillsInput.value);
        } else if (e.key === ',' || e.key === ';') {
            e.preventDefault();
            addTag(skillsInput.value);
        } else if (e.key === 'Backspace' && !skillsInput.value && skills.length > 0) {
            skills.pop();
            renderTags();
            updateHiddenInput();
        }
    });

    // Handle paste
    skillsInput.addEventListener('paste', function(e) {
        e.preventDefault();
        const paste = (e.clipboardData || window.clipboardData).getData('text');
        const items = paste.split(/[,;\n]/).map(s => s.trim()).filter(s => s);
        items.forEach(item => addTag(item));
    });

    // Form validation
    form.addEventListener('submit', function(e) {
        if (skills.length === 0) {
            e.preventDefault();
            alert('Please add at least one skill');
            skillsInput.focus();
        }
    });
});
</script>
{% endblock %}