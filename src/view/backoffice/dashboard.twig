{% extends "layout.twig" %}

{% set active = 'dashboard' %}

{% block title %}Dashboard - Job Dating Admin{% endblock %}

{% block content %}
<div class="header">
    <h1><i class="fas fa-chart-line"></i> Dashboard</h1>
</div>

<style>
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: linear-gradient(135deg, #2d1b1b 0%, #1a0f0f 100%);
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
        position: relative;
        overflow: hidden;
        border: 1px solid rgba(255, 107, 107, 0.1);
        transition: all 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 40px rgba(255, 107, 107, 0.3);
    }

    .stat-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: linear-gradient(90deg, #ff6b6b 0%, #ff4757 100%);
    }

    .stat-card.orange::before {
        background: linear-gradient(90deg, #ff9a56 0%, #ff6348 100%);
    }

    .stat-card.red::before {
        background: linear-gradient(90deg, #c44569 0%, #8b2635 100%);
    }

    .stat-card.coral::before {
        background: linear-gradient(90deg, #ee5a6f 0%, #c44569 100%);
    }

    .stat-icon {
        font-size: 40px;
        margin-bottom: 15px;
        background: linear-gradient(135deg, #ff6b6b 0%, #ff4757 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .stat-card.orange .stat-icon {
        background: linear-gradient(135deg, #ff9a56 0%, #ff6348 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .stat-card.red .stat-icon {
        background: linear-gradient(135deg, #c44569 0%, #8b2635 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .stat-card.coral .stat-icon {
        background: linear-gradient(135deg, #ee5a6f 0%, #c44569 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .stat-label {
        color: #b0b0b0;
        font-size: 14px;
        margin-bottom: 10px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .stat-value {
        font-size: 36px;
        font-weight: bold;
        color: #fff;
    }

    .quick-actions {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        margin-top: 30px;
    }

    .action-btn {
        background: linear-gradient(135deg, #2d1b1b 0%, #1a0f0f 100%);
        padding: 20px;
        border-radius: 12px;
        text-decoration: none;
        color: #e0e0e0;
        display: flex;
        align-items: center;
        gap: 15px;
        transition: all 0.3s ease;
        border: 2px solid rgba(255, 107, 107, 0.1);
    }

    .action-btn:hover {
        transform: translateY(-5px);
        border-color: #ff6b6b;
        box-shadow: 0 8px 25px rgba(255, 107, 107, 0.3);
    }

    .action-btn i {
        font-size: 28px;
        background: linear-gradient(135deg, #ff6b6b 0%, #ff4757 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .action-text {
        font-weight: 600;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .stat-card {
        animation: fadeInUp 0.5s ease-out forwards;
    }

    .stat-card:nth-child(1) { animation-delay: 0.1s; }
    .stat-card:nth-child(2) { animation-delay: 0.2s; }
    .stat-card:nth-child(3) { animation-delay: 0.3s; }
    .stat-card:nth-child(4) { animation-delay: 0.4s; }
</style>

<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-icon">
            <i class="fas fa-user-graduate"></i>
        </div>
        <div class="stat-label">Total Students</div>
        <div class="stat-value">{{ studentsCount }}</div>
    </div>

    <div class="stat-card orange">
        <div class="stat-icon">
            <i class="fas fa-building"></i>
        </div>
        <div class="stat-label">Total Companies</div>
        <div class="stat-value">{{ companiesCount }}</div>
    </div>

    <div class="stat-card coral">
        <div class="stat-icon">
            <i class="fas fa-bullhorn"></i>
        </div>
        <div class="stat-label">Active Job Ads</div>
        <div class="stat-value">{{ adsCount }}</div>
    </div>

    <div class="stat-card red">
        <div class="stat-icon">
            <i class="fas fa-archive"></i>
        </div>
        <div class="stat-label">Archived Ads</div>
        <div class="stat-value">{{ archivedAdsCount }}</div>
    </div>
</div>

<div class="card">
    <h2 style="margin-bottom: 20px; color: #fff;">
        <i class="fas fa-bolt"></i> Quick Actions
    </h2>
    <div class="quick-actions">
        <a href="/AddStudents/new" class="action-btn">
            <i class="fas fa-user-plus"></i>
            <span class="action-text">Add Student</span>
        </a>
        <a href="/AddCompany/new" class="action-btn">
            <i class="fas fa-building"></i>
            <span class="action-text">Add Company</span>
        </a>
        <a href="/Ads/New" class="action-btn">
            <i class="fas fa-plus-circle"></i>
            <span class="action-text">Create Job Ad</span>
        </a>
        <a href="/StudentsIndex" class="action-btn">
            <i class="fas fa-list"></i>
            <span class="action-text">View Students</span>
        </a>
    </div>
</div>
{% endblock %}