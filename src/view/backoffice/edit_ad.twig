{% extends "layout.twig" %}

{% set active = 'ads' %}

{% block title %}Edit Job Ad - Job Dating Admin{% endblock %}

{% block content %}
<div class="header">
    <h1><i class="fas fa-edit"></i> Edit Job Advertisement</h1>
</div>

<div class="card">
    <form action="/Ads/Update/{{ ad.id }}" method="POST">
        <div class="form-group">
            <label for="title">
                <i class="fas fa-briefcase"></i> Job Title
            </label>
            <input type="text" id="title" name="title" class="form-control" value="{{ ad.title }}" required placeholder="e.g., Senior Developer, Marketing Manager">
        </div>

        <div class="form-group">
            <label for="company_id">
                <i class="fas fa-building"></i> Company ID
            </label>
            <input type="number" id="company_id" name="company_id" class="form-control" value="{{ ad.company_id }}" required placeholder="Enter company ID">
        </div>

        <div class="form-group">
            <label for="contract_type">
                <i class="fas fa-file-contract"></i> Contract Type
            </label>
            <select id="contract_type" name="contract_type" class="form-control" required>
                <option value="">Select contract type</option>
                <option value="Full-time" {% if ad.contract_type == 'Full-time' %}selected{% endif %}>Full-time</option>
                <option value="Part-time" {% if ad.contract_type == 'Part-time' %}selected{% endif %}>Part-time</option>
                <option value="Contract" {% if ad.contract_type == 'Contract' %}selected{% endif %}>Contract</option>
                <option value="Internship" {% if ad.contract_type == 'Internship' %}selected{% endif %}>Internship</option>
                <option value="Freelance" {% if ad.contract_type == 'Freelance' %}selected{% endif %}>Freelance</option>
            </select>
        </div>

        <div class="form-group">
            <label for="location">
                <i class="fas fa-map-marker-alt"></i> Location
            </label>
            <input type="text" id="location" name="location" class="form-control" value="{{ ad.location }}" required placeholder="e.g., New York, Remote, Hybrid">
        </div>

        <div class="form-group">
            <label for="description">
                <i class="fas fa-align-left"></i> Job Description
            </label>
            <textarea id="description" name="description" class="form-control" rows="6" required placeholder="Enter detailed job description...">{{ ad.description }}</textarea>
        </div>

        <div class="form-group">
            <label for="skills">
                <i class="fas fa-tools"></i> Required Skills
            </label>
            <textarea id="skills" name="skills" class="form-control" rows="3" required placeholder="e.g., JavaScript, React, Node.js, Communication">{{ ad.skills }}</textarea>
        </div>

        <div style="display: flex; gap: 10px; margin-top: 30px;">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Update Job Ad
            </button>
            <a href="/Ads" class="btn btn-danger">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>
{% endblock %}