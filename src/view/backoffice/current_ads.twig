{% extends "layout.twig" %}

{% set active = 'ads' %}

{% block title %}Job Ads - Job Dating Admin{% endblock %}

{% block content %}
<div class="header">
    <h1><i class="fas fa-bullhorn"></i> Job Advertisements</h1>
    <a href="/Ads/New" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New Ad
    </a>
</div>

{% if all is empty %}
<div class="card">
    <div class="empty-state">
        <i class="fas fa-bullhorn"></i>
        <h3>No Job Ads Yet</h3>
        <p>Create your first job advertisement</p>
        <a href="/Ads/New" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Ad
        </a>
    </div>
</div>
{% else %}
<div class="cards-grid">
    {% for ad in all %}
    <div class="card">
        <div class="card-header">
            <i class="fas fa-briefcase"></i>
            {{ ad.title }}
        </div>
        <div class="card-body">
            <div class="card-info">
                <i class="fas fa-building"></i>
                <span>Company: {{ ad.company_id }}</span>
            </div>
            <div class="card-info">
                <i class="fas fa-file-contract"></i>
                <span class="badge badge-primary">{{ ad.contract_type }}</span>
            </div>
            <div class="card-info">
                <i class="fas fa-map-marker-alt"></i>
                <span>{{ ad.location }}</span>
            </div>
            <div class="card-info">
                <i class="fas fa-tools"></i>
                <span>{{ ad.skills|length > 60 ? ad.skills|slice(0, 60) ~ '...' : ad.skills }}</span>
            </div>
            <div class="card-info">
                <i class="fas fa-calendar"></i>
                <span>{{ ad.created_at }}</span>
            </div>
        </div>
        <div class="card-actions">
            <a href="/Ads/Edit/{{ ad.id }}" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a href="/Ads/Delete/{{ ad.id }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this job ad?')">
                <i class="fas fa-trash"></i> Delete
            </a>
        </div>
    </div>
    {% endfor %}
</div>
{% endif %}
{% endblock %}