{% extends "layout.twig" %}

{% set active = 'ads' %}

{% block title %}Job Ads - Job Dating Admin{% endblock %}

{% block content %}
<div class="header">
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <h1><i class="fas fa-bullhorn"></i> Job Advertisements</h1>
        <a href="/Ads/New" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Ad
        </a>
    </div>
</div>

<div class="card">
    <table>
        <thead>
            <tr>
                <th><i class="fas fa-hashtag"></i> ID</th>
                <th><i class="fas fa-briefcase"></i> Title</th>
                <th><i class="fas fa-building"></i> Company ID</th>
                <th><i class="fas fa-file-contract"></i> Contract Type</th>
                <th><i class="fas fa-map-marker-alt"></i> Location</th>
                <th><i class="fas fa-tools"></i> Skills</th>
                <th><i class="fas fa-calendar"></i> Created At</th>
                <th><i class="fas fa-cog"></i> Actions</th>
            </tr>
        </thead>
        <tbody>
            {% if all is empty %}
                <tr>
                    <td colspan="8" style="text-align: center; padding: 40px; color: #b0b0b0;">
                        <i class="fas fa-inbox" style="font-size: 48px; margin-bottom: 10px; display: block; opacity: 0.3;"></i>
                        No job ads found
                    </td>
                </tr>
            {% else %}
                {% for ad in all %}
                <tr style="transition: all 0.3s ease;">
                    <td style="font-weight: 600; color: #ff6b6b;">{{ ad.id }}</td>
                    <td style="font-weight: 600;">{{ ad.title }}</td>
                    <td>{{ ad.company_id }}</td>
                    <td>
                        <span style="padding: 6px 14px; background: linear-gradient(135deg, rgba(255, 107, 107, 0.2), rgba(255, 71, 87, 0.2)); border-radius: 20px; font-size: 12px; font-weight: 600; color: #ff9a9a;">
                            {{ ad.contract_type }}
                        </span>
                    </td>
                    <td><i class="fas fa-map-marker-alt" style="color: #ff6b6b; margin-right: 5px;"></i>{{ ad.location }}</td>
                    <td>{{ ad.skills|length > 50 ? ad.skills|slice(0, 50) ~ '...' : ad.skills }}</td>
                    <td style="color: #b0b0b0;">{{ ad.created_at }}</td>
                    <td style="white-space: nowrap;">
                        <a href="/Ads/Edit/{{ ad.id }}" class="btn btn-warning" style="margin-right: 10px;">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a href="/Ads/Delete/{{ ad.id }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this job ad?')">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
                {% endfor %}
            {% endif %}
        </tbody>
    </table>
</div>

<style>
    @keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(-20px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    tbody tr {
        animation: slideIn 0.3s ease-out;
    }

    tbody tr:hover {
        background: rgba(255, 107, 107, 0.1) !important;
        transform: scale(1.01);
    }
</style>
{% endblock %}