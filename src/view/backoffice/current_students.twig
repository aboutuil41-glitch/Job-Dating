{% extends "layout.twig" %}

{% set active = 'students' %}

{% block title %}Students - Job Dating Admin{% endblock %}

{% block content %}
<div class="animated-background">
    <div class="gradient-orb orb-1"></div>
    <div class="gradient-orb orb-2"></div>
    <div class="gradient-orb orb-3"></div>
</div>

<div class="header-modern">
    <div class="header-content">
        <div>
            <h1><i class="fas fa-user-graduate"></i> Students</h1>
            <p class="subtitle">View all registered students</p>
        </div>
    </div>
</div>

<div class="stats-overview">
    <div class="stat-card">
        <div class="stat-icon">
            <i class="fas fa-users"></i>
        </div>
        <div class="stat-content">
            <div class="stat-value">{{ all|length }}</div>
            <div class="stat-label">Total Students</div>
        </div>
    </div>
</div>

<div class="cards-container">
    {% if all is empty %}
        <div class="empty-state">
            <div class="empty-icon">
                <i class="fas fa-user-graduate"></i>
            </div>
            <h2>No Students Yet</h2>
            <p>Students will appear here once they register</p>
        </div>
    {% else %}
        {% for student in all %}
        <div class="student-card">
            <div class="student-avatar">
                <i class="fas fa-user-circle"></i>
            </div>
            
            <div class="student-info">
                <h3 class="student-name">{{ student.name }}</h3>
                
                <div class="student-details">
                    <div class="detail-item">
                        <i class="fas fa-envelope"></i>
                        <span>{{ student.email }}</span>
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-calendar-alt"></i>
                        <span>Joined {{ student.created_at|date('M d, Y') }}</span>
                    </div>
                </div>
            </div>
            
            <div class="card-badge">
                <i class="fas fa-graduation-cap"></i>
                <span>Student</span>
            </div>
        </div>
        {% endfor %}
    {% endif %}
</div>

<style>
    :root {
        --primary: #6366f1;
        --primary-dark: #4f46e5;
        --secondary: #8b5cf6;
        --accent: #ec4899;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
        --dark-bg: #0f0f23;
        --card-bg: #1a1a2e;
        --card-hover: #25253f;
        --text-primary: #e0e0e0;
        --text-secondary: #a0a0a0;
        --border: #2a2a4a;
        --purple: #a855f7;
        --pink: #ec4899;
    }

    .animated-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        overflow: hidden;
        background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 100%);
    }

    .gradient-orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.4;
        animation: float 20s infinite ease-in-out;
    }

    .orb-1 {
        width: 500px;
        height: 500px;
        background: radial-gradient(circle, var(--purple) 0%, transparent 70%);
        top: -10%;
        left: -10%;
        animation-delay: 0s;
    }

    .orb-2 {
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, var(--pink) 0%, transparent 70%);
        bottom: -10%;
        right: -10%;
        animation-delay: -7s;
    }

    .orb-3 {
        width: 350px;
        height: 350px;
        background: radial-gradient(circle, var(--secondary) 0%, transparent 70%);
        top: 50%;
        left: 50%;
        animation-delay: -14s;
    }

    @keyframes float {
        0%, 100% { transform: translate(0, 0) scale(1); }
        25% { transform: translate(50px, -50px) scale(1.1); }
        50% { transform: translate(-30px, 50px) scale(0.9); }
        75% { transform: translate(40px, 30px) scale(1.05); }
    }

    .header-modern {
        margin-bottom: 30px;
        animation: slideDown 0.6s ease-out;
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 30px;
        background: linear-gradient(135deg, rgba(168, 85, 247, 0.1) 0%, rgba(236, 72, 153, 0.1) 100%);
        border-radius: 20px;
        border: 1px solid var(--border);
        backdrop-filter: blur(10px);
    }

    .header-content h1 {
        font-size: 32px;
        margin: 0 0 8px 0;
        background: linear-gradient(135deg, var(--purple) 0%, var(--pink) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .subtitle {
        margin: 0;
        color: var(--text-secondary);
        font-size: 14px;
    }

    @keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .stats-overview {
        margin-bottom: 40px;
        animation: slideDown 0.7s ease-out;
    }

    .stat-card {
        background: linear-gradient(135deg, var(--card-bg) 0%, var(--card-hover) 100%);
        border: 1px solid var(--border);
        border-radius: 20px;
        padding: 24px 32px;
        display: flex;
        align-items: center;
        gap: 20px;
        transition: all 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 20px 60px rgba(168, 85, 247, 0.2);
        border-color: var(--purple);
    }

    .stat-icon {
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, rgba(168, 85, 247, 0.2) 0%, rgba(236, 72, 153, 0.2) 100%);
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 32px;
        color: var(--purple);
        border: 2px solid rgba(168, 85, 247, 0.3);
    }

    .stat-content {
        flex: 1;
    }

    .stat-value {
        font-size: 36px;
        font-weight: 800;
        background: linear-gradient(135deg, var(--purple) 0%, var(--pink) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        line-height: 1;
        margin-bottom: 8px;
    }

    .stat-label {
        font-size: 14px;
        color: var(--text-secondary);
        font-weight: 600;
    }

    .cards-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
        gap: 20px;
        padding: 20px 0;
    }

    .student-card {
        background: var(--card-bg);
        border: 1px solid var(--border);
        border-radius: 20px;
        padding: 24px;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        animation: fadeInUp 0.5s ease-out;
        animation-fill-mode: both;
        position: relative;
        overflow: hidden;
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .student-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--purple), var(--pink), var(--accent));
        transform: scaleX(0);
        transition: transform 0.4s ease;
    }

    .student-card:hover::before {
        transform: scaleX(1);
    }

    .student-card:hover {
        transform: translateY(-6px);
        background: var(--card-hover);
        border-color: var(--purple);
        box-shadow: 0 20px 60px rgba(168, 85, 247, 0.2);
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .student-card:nth-child(1) { animation-delay: 0.1s; }
    .student-card:nth-child(2) { animation-delay: 0.15s; }
    .student-card:nth-child(3) { animation-delay: 0.2s; }
    .student-card:nth-child(4) { animation-delay: 0.25s; }
    .student-card:nth-child(5) { animation-delay: 0.3s; }
    .student-card:nth-child(6) { animation-delay: 0.35s; }

    .student-avatar {
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, rgba(168, 85, 247, 0.2) 0%, rgba(236, 72, 153, 0.2) 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 40px;
        color: var(--purple);
        border: 3px solid rgba(168, 85, 247, 0.3);
        transition: all 0.3s ease;
        flex-shrink: 0;
    }

    .student-card:hover .student-avatar {
        transform: scale(1.1);
        box-shadow: 0 10px 30px rgba(168, 85, 247, 0.4);
    }

    .student-info {
        flex: 1;
    }

    .student-name {
        font-size: 20px;
        margin: 0 0 12px 0;
        color: var(--text-primary);
        font-weight: 700;
    }

    .student-details {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .detail-item {
        display: flex;
        align-items: center;
        gap: 10px;
        color: var(--text-secondary);
        font-size: 13px;
    }

    .detail-item i {
        color: var(--purple);
        width: 16px;
        font-size: 14px;
    }

    .card-badge {
        position: absolute;
        top: 16px;
        right: 16px;
        display: flex;
        align-items: center;
        gap: 6px;
        padding: 6px 14px;
        background: linear-gradient(135deg, rgba(168, 85, 247, 0.2) 0%, rgba(236, 72, 153, 0.2) 100%);
        color: var(--purple);
        border-radius: 20px;
        font-size: 11px;
        font-weight: 700;
        border: 1px solid rgba(168, 85, 247, 0.3);
    }

    .empty-state {
        grid-column: 1 / -1;
        text-align: center;
        padding: 80px 20px;
        animation: fadeIn 0.6s ease-out;
    }

    .empty-icon {
        font-size: 80px;
        color: var(--purple);
        margin-bottom: 24px;
        opacity: 0.3;
        animation: pulse 2s infinite;
    }

    @keyframes pulse {
        0%, 100% { opacity: 0.3; transform: scale(1); }
        50% { opacity: 0.5; transform: scale(1.05); }
    }

    .empty-state h2 {
        font-size: 28px;
        margin: 0 0 12px 0;
        color: var(--text-primary);
    }

    .empty-state p {
        color: var(--text-secondary);
        margin: 0;
        font-size: 16px;
    }
</style>
{% endblock %}