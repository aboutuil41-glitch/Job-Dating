{% extends "layout.twig" %}

{% set active = 'students' %}

{% block title %}Students - Job Dating Admin{% endblock %}

{% block content %}
<div class="header">
    <h1><i class="fas fa-user-graduate"></i> Students</h1>
</div>

{% if all is empty %}
<div class="card">
    <div class="empty-state">
        <i class="fas fa-user-graduate"></i>
        <h3>No Students Yet</h3>
        <p>Students will appear here once they register</p>
    </div>
</div>
{% else %}
<div class="cards-grid">
    {% for student in all %}
    <div class="card">
        <div class="card-header">
            <i class="fas fa-user"></i>
            {{ student.name }}
        </div>
        <div class="card-body">
            <div class="card-info">
                <i class="fas fa-envelope"></i>
                <span>{{ student.email }}</span>
            </div>
            <div class="card-info">
                <i class="fas fa-calendar"></i>
                <span>Registered: {{ student.created_at }}</span>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% endif %}
{% endblock %}