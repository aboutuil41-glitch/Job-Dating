{% extends "layout.twig" %}

{% set active = 'students' %}

{% block title %}Students - Job Dating Admin{% endblock %}

{% block content %}
<div class="header">
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <h1><i class="fas fa-user-graduate"></i> Students</h1>
        <a href="/AddStudents/new" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add Student
        </a>
    </div>
</div>

<div class="card">
    <table>
        <thead>
            <tr>
                <th><i class="fas fa-hashtag"></i> ID</th>
                <th><i class="fas fa-user"></i> Name</th>
                <th><i class="fas fa-envelope"></i> Email</th>
                <th><i class="fas fa-calendar"></i> Created At</th>
                <th><i class="fas fa-cog"></i> Actions</th>
            </tr>
        </thead>
        <tbody>
            {% if all is empty %}
                <tr>
                    <td colspan="5" style="text-align: center; padding: 40px; color: #b0b0b0;">
                        <i class="fas fa-inbox" style="font-size: 48px; margin-bottom: 10px; display: block; opacity: 0.3;"></i>
                        No students found
                    </td>
                </tr>
            {% else %}
                {% for student in all %}
                <tr style="transition: all 0.3s ease;">
                    <td style="font-weight: 600; color: #ff6b6b;">{{ student.id }}</td>
                    <td style="font-weight: 600;"><i class="fas fa-user-circle" style="color: #ff9a56; margin-right: 8px;"></i>{{ student.name }}</td>
                    <td><i class="fas fa-envelope" style="color: #ff9a56; margin-right: 5px;"></i>{{ student.email }}</td>
                    <td style="color: #b0b0b0;">{{ student.created_at }}</td>
                    <td style="white-space: nowrap;">
                        <a href="/Current/Students/Edit/{{ student.id }}" class="btn btn-warning" style="margin-right: 10px;">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a href="/Current/Students/Delete/{{ student.id }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this student?')">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
                {% endfor %}
            {% endif %}
        </tbody>
    </table>
</div>

<style>
    @keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(-20px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    tbody tr {
        animation: slideIn 0.3s ease-out;
    }

    tbody tr:hover {
        background: rgba(255, 107, 107, 0.1) !important;
        transform: scale(1.01);
    }
</style>
{% endblock %}