{% extends "layout.twig" %}

{% set active = 'archive' %}

{% block title %}Archived Job Ads - Job Dating Admin{% endblock %}

{% block content %}
<div class="header">
    <h1><i class="fas fa-archive"></i> Archived Job Advertisements</h1>
    <a href="/Ads" class="btn btn-primary">
        <i class="fas fa-arrow-left"></i> Back to Active Ads
    </a>
</div>

{% if app.request.query.get('success') == 'restored' %}
<div class="alert alert-success">
    <i class="fas fa-check-circle"></i> Job ad successfully restored!
</div>
{% endif %}

{% if app.request.query.get('success') == 'deleted' %}
<div class="alert alert-success">
    <i class="fas fa-check-circle"></i> Job ad permanently deleted!
</div>
{% endif %}

<div style="padding: 15px; background: #fff; border-radius: 8px; margin-bottom: 20px; border-left: 4px solid #f39c12;">
    <i class="fas fa-info-circle"></i> <strong>Archive:</strong> These job ads are archived. You can restore them or permanently delete them.
</div>

{% if all is empty %}
<div class="card">
    <div class="empty-state">
        <i class="fas fa-archive"></i>
        <h3>No Archived Ads</h3>
        <p>Deleted job ads will appear here</p>
    </div>
</div>
{% else %}
<div class="cards-grid">
    {% for ad in all %}
    <div class="card" style="opacity: 0.8;">
        <div class="card-header">
            <i class="fas fa-briefcase"></i>
            {{ ad.title }}
        </div>
        <div class="card-body">
            <div class="card-info">
                <i class="fas fa-building"></i>
                <span>Company: {{ ad.company_id }}</span>
            </div>
            <div class="card-info">
                <i class="fas fa-file-contract"></i>
                <span class="badge badge-warning">{{ ad.contract_type }}</span>
            </div>
            <div class="card-info">
                <i class="fas fa-map-marker-alt"></i>
                <span>{{ ad.location }}</span>
            </div>
            <div class="card-info">
                <i class="fas fa-calendar"></i>
                <span>{{ ad.created_at }}</span>
            </div>
        </div>
        <div class="card-actions">
            <a href="/Ads/Restore/{{ ad.id }}" class="btn btn-success" onclick="return confirm('Restore this job ad?')">
                <i class="fas fa-undo"></i> Restore
            </a>
            <a href="/Ads/HardDelete/{{ ad.id }}" class="btn btn-danger" onclick="return confirm('⚠️ PERMANENTLY DELETE? This cannot be undone!')">
                <i class="fas fa-trash-alt"></i> Delete Forever
            </a>
        </div>
    </div>
    {% endfor %}
</div>
{% endif %}
{% endblock %}