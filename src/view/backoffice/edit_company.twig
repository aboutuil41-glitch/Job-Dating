{% extends "layout.twig" %}

{% set active = 'companies' %}

{% block title %}Edit Company - Job Dating Admin{% endblock %}

{% block content %}
<div class="header">
    <h1><i class="fas fa-building"></i> Edit Company</h1>
</div>

<div class="card">
    <form action="/Company/Update/{{ company.id }}" method="POST">
        <div class="form-group">
            <label for="name">
                <i class="fas fa-building"></i> Company Name
            </label>
            <input type="text" id="name" name="name" class="form-control" value="{{ company.name }}" required placeholder="Enter company name">
        </div>

        <div class="form-group">
            <label for="sector">
                <i class="fas fa-industry"></i> Sector
            </label>
            <input type="text" id="sector" name="sector" class="form-control" value="{{ company.sector }}" required placeholder="e.g., Technology, Finance, Healthcare">
        </div>

        <div class="form-group">
            <label for="location">
                <i class="fas fa-map-marker-alt"></i> Location
            </label>
            <input type="text" id="location" name="location" class="form-control" value="{{ company.location }}" required placeholder="Enter location">
        </div>

        <div class="form-group">
            <label for="email">
                <i class="fas fa-envelope"></i> Email Address
            </label>
            <input type="email" id="email" name="email" class="form-control" value="{{ company.email }}" required placeholder="Enter email address">
        </div>

        <div class="form-group">
            <label for="phone">
                <i class="fas fa-phone"></i> Phone Number
            </label>
            <input type="tel" id="phone" name="phone" class="form-control" value="{{ company.phone }}" required placeholder="Enter phone number">
        </div>

        <div style="display: flex; gap: 10px; margin-top: 30px;">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Update Company
            </button>
            <a href="/CompanyIndex" class="btn btn-danger">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>
{% endblock %}