<style>
    .applicants-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 16px;
    }

    .applicant-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 16px;
        background: #fff;
    }

    .applicant-card h3 {
        margin: 0 0 8px;
        font-size: 18px;
    }

    .applicant-card p {
        margin: 4px 0;
        font-size: 14px;
        color: #333;
    }

    .message {
        margin-top: 10px;
        font-style: italic;
        color: #555;
    }

    .actions {
        margin-top: 12px;
        display: flex;
        gap: 10px;
    }

    .btn {
        padding: 6px 12px;
        text-decoration: none;
        border-radius: 4px;
        font-size: 14px;
        color: #fff;
        text-align: center;
    }

    .btn.accept {
        background-color: #28a745;
    }

    .btn.refuse {
        background-color: #dc3545;
    }
</style>

<div class="applicants-container">
    {% for app in all %}
        <div class="applicant-card">
            <h3>{{ app.first_name }} {{ app.last_name }}</h3>

            <p><strong>Email:</strong> {{ app.email }}</p>
            <p><strong>Specialization:</strong> {{ app.specialization }}</p>
            <p><strong>Promotion:</strong> {{ app.promotion }}</p>

            <p class="message">
                {{ app.motivational_message }}
            </p>

            <div class="actions">
                <a href="/applicantes/accept/{{ app.id }}" class="btn accept">
                    Accept
                </a>
                <a href="/applicantes/refuse/{{ app.id }}" class="btn refuse">
                    Refuse
                </a>
            </div>
        </div>
    {% else %}
        <p>No applicants found.</p>
    {% endfor %}
</div>
