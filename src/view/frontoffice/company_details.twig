{% extends "layout.twig" %}

{% block title %}{{ company.name }} - Job Dating{% endblock %}

{% block content %}
    <div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <!-- Breadcrumb -->
            <nav class="mb-6" aria-label="Breadcrumb">
                <ol class="flex items-center space-x-2 text-sm">
                    <li>
                        <a href="/Job-Dating/public/companies" class="text-blue-600 hover:text-blue-800 transition">Companies</a>
                    </li>
                    <li class="text-gray-400">/</li>
                    <li class="text-gray-800 font-medium truncate">{{ company.name }}</li>
                </ol>
            </nav>

            <!-- Company Header -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-8">
                <div class="p-8">
                    <div class="flex items-start space-x-6">
                        <!-- Company Logo -->
                        <div class="w-20 h-20 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center text-white font-bold text-2xl">
                            {{ company.name|slice(0,2)|upper }}
                        </div>

                        <!-- Company Info -->
                        <div class="flex-1">
                            <h1 class="text-3xl font-bold text-gray-900 mb-2">{{ company.name }}</h1>
                            <p class="text-lg text-gray-600 mb-4">{{ company.sector }}</p>
                            
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
                                <div class="flex items-center text-gray-600">
                                    <i class="fas fa-map-marker-alt w-5 text-gray-400 mr-2"></i>
                                    {{ company.location }}
                                </div>
                                <div class="flex items-center text-gray-600">
                                    <i class="fas fa-envelope w-5 text-gray-400 mr-2"></i>
                                    {{ company.email }}
                                </div>
                                {% if company.phone %}
                                    <div class="flex items-center text-gray-600">
                                        <i class="fas fa-phone w-5 text-gray-400 mr-2"></i>
                                        {{ company.phone }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>

                        <!-- Stats -->
                        <div class="text-center">
                            <div class="text-2xl font-bold text-blue-600">{{ company.active_jobs }}</div>
                            <div class="text-sm text-gray-500">Active Jobs</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Job Listings -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="p-6 border-b border-gray-200">
                    <h2 class="text-xl font-bold text-gray-900">Current Job Openings</h2>
                </div>

                {% if jobs %}
                    <div class="divide-y divide-gray-200">
                        {% for job in jobs %}
                            <div class="p-6 hover:bg-gray-50 transition">
                                <div class="flex items-start justify-between">
                                    <div class="flex-1">
                                        <h3 class="text-lg font-semibold text-gray-900 mb-2">{{ job.title }}</h3>
                                        <p class="text-gray-600 mb-3 line-clamp-2">{{ job.description|striptags }}</p>
                                        
                                        <div class="flex flex-wrap items-center gap-4 text-sm text-gray-500">
                                            <div class="flex items-center">
                                                <i class="fas fa-map-marker-alt mr-1"></i>
                                                {{ job.location }}
                                            </div>
                                            <div class="flex items-center">
                                                <i class="fas fa-calendar mr-1"></i>
                                                Posted {{ job.created_at|date("M d, Y") }}
                                            </div>
                                        </div>

                                        <div class="flex flex-wrap gap-2 mt-3">
                                            {% for skill in job.skills|split(',') %}
                                                <span class="bg-blue-50 text-blue-700 px-2 py-1 rounded text-xs">
                                                    {{ skill|trim }}
                                                </span>
                                            {% endfor %}
                                        </div>
                                    </div>

                                    <div class="ml-6 flex flex-col items-end space-y-3">
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                                            {% if job.contract_type == 'CDI' %}bg-green-100 text-green-800
                                            {% elseif job.contract_type == 'CDD' %}bg-yellow-100 text-yellow-800
                                            {% elseif job.contract_type == 'Internship' %}bg-blue-100 text-blue-800
                                            {% else %}bg-purple-100 text-purple-800
                                            {% endif %}">
                                            {{ job.contract_type }}
                                        </span>

                                        <a href="/Job-Dating/public/job/{{ job.id }}" 
                                           class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition text-sm font-medium">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="p-12 text-center">
                        <i class="fas fa-briefcase text-4xl text-gray-300 mb-4"></i>
                        <h3 class="text-lg font-semibold text-gray-700 mb-2">No Active Job Openings</h3>
                        <p class="text-gray-500">This company doesn't have any active job postings at the moment.</p>
                    </div>
                {% endif %}
            </div>

            <!-- Back to Companies -->
            <div class="text-center mt-8">
                <a href="/Job-Dating/public/companies" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                    </svg>
                    Back to Companies
                </a>
            </div>
        </div>
    </div>
{% endblock %}