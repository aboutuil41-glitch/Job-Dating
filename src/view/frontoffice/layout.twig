                    </div>
                </div>
            </div>

            <!-- Mobile menu button -->
            <div class="md:hidden">
                <button id="mobileMenuButton" class="text-gray-500 hover:text-gray-700 focus:outline-none">
                    <i class="fas fa-bars text-xl"></i>
                </button>
            </div>
        </div>

        <!-- Mobile menu -->
        <div id="mobileMenu" class="md:hidden hidden py-4 border-t border-gray-200 dark:border-gray-700">
            <div class="space-y-3">
                <a href="/Job-Dating/public/home" class="mobile-nav-link">
                    <i class="fas fa-home mr-3"></i>
                    Accueil
                </a>
                <a href="/Job-Dating/public/jobs" class="mobile-nav-link">
                    <i class="fas fa-search mr-3"></i>
                    Offres d'emploi
                </a>
                <a href="/Job-Dating/public/companies" class="mobile-nav-link">
                    <i class="fas fa-building mr-3"></i>
