                    </button>

                    <div class="absolute right-0 mt-2 w-48 bg-white dark:bg-gray-800 rounded-lg shadow-xl border border-gray-200 dark:border-gray-700 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-10">
                        <div class="py-2">
                            <div class="px-4 py-2 border-b border-gray-100 dark:border-gray-700">
                                <p class="text-sm font-semibold text-gray-900 dark:text-white">{{ user_name|default('Utilisateur') }}</p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">{{ user_email|default('user@example.com') }}</p>
                            </div>
                            <a href="/Job-Dating/public/profile" class="dropdown-item">
                                <i class="fas fa-user mr-3"></i>
                                Mon Profil
                            </a>
                            <a href="/Job-Dating/public/applications" class="dropdown-item">
                                <i class="fas fa-file-alt mr-3"></i>
                                Mes Candidatures
                            </a>
                            <a href="/Job-Dating/public/saved-jobs" class="dropdown-item">
                                <i class="fas fa-bookmark mr-3"></i>
                                Offres Sauvegardées
                            </a>
                            <div class="border-t border-gray-100 dark:border-gray-700 mt-2 pt-2">
                                <a href="/Job-Dating/public/logout" class="dropdown-item text-red-600 hover:text-red-700 dark:text-red-400">
                                    <i class="fas fa-sign-out-alt mr-3"></i>
