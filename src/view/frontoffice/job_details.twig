{% extends "layout.twig" %}

{% block title %}{{ job.title }} - YouCode Job Dating{% endblock %}

{% block styles %}
<style>
    :root {
        --primary: #6366f1;
        --secondary: #8b5cf6;
        --dark-bg: #0f0f23;
        --card-bg: #1a1a2e;
        --card-hover: #25253f;
        --text-primary: #e0e0e0;
        --text-secondary: #a0a0a0;
        --border: #2a2a4a;
        --cyan: #06b6d4;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
    }

    body { background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 100%); }

    .animated-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        overflow: hidden;
    }

    .gradient-orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.4;
        animation: float 20s infinite ease-in-out;
    }

    .orb-1 {
        width: 500px;
        height: 500px;
        background: radial-gradient(circle, var(--primary) 0%, transparent 70%);
        top: -10%;
        left: -10%;
    }

    .orb-2 {
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, var(--cyan) 0%, transparent 70%);
        bottom: -10%;
        right: -10%;
        animation-delay: -7s;
    }

    @keyframes float {
        0%, 100% { transform: translate(0, 0); }
        25% { transform: translate(50px, -50px); }
        50% { transform: translate(-30px, 50px); }
        75% { transform: translate(40px, 30px); }
    }

    .job-card-modern {
        background: var(--card-bg);
        border: 1px solid var(--border);
        border-radius: 24px;
        animation: fadeInUp 0.6s ease-out;
        transition: all 0.4s ease;
    }

    .job-card-modern:hover {
        box-shadow: 0 20px 60px rgba(99, 102, 241, 0.2);
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .job-header {
        padding: 40px;
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);
        border-bottom: 1px solid var(--border);
        position: relative;
    }

    .job-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--primary), var(--secondary), var(--cyan));
    }

    .company-avatar {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 32px;
        font-weight: bold;
        color: white;
        box-shadow: 0 8px 24px rgba(99, 102, 241, 0.3);
    }

    .job-title {
        font-size: 32px;
        font-weight: 800;
        background: linear-gradient(135deg, var(--text-primary) 0%, var(--cyan) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin: 0 0 12px 0;
    }

    .apply-button {
        padding: 16px 32px;
        border-radius: 14px;
        font-weight: 700;
        border: none;
        cursor: pointer;
        transition: all 0.4s ease;
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        color: white;
        box-shadow: 0 8px 24px rgba(99, 102, 241, 0.4);
    }

    .apply-button:hover:not(:disabled) {
        transform: translateY(-2px);
        box-shadow: 0 12px 32px rgba(99, 102, 241, 0.5);
    }

    .apply-button:disabled {
        background: rgba(160, 160, 160, 0.2);
        color: var(--text-secondary);
        cursor: not-allowed;
    }

    .skill-tag {
        padding: 10px 20px;
        border-radius: 12px;
        background: linear-gradient(135deg, rgba(6, 182, 212, 0.2) 0%, rgba(20, 184, 166, 0.2) 100%);
        border: 2px solid rgba(6, 182, 212, 0.3);
        color: var(--cyan);
        transition: all 0.3s ease;
    }

    .skill-tag:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(6, 182, 212, 0.3);
    }

    .info-card {
        background: rgba(99, 102, 241, 0.05);
        border: 1px solid var(--border);
        border-radius: 20px;
        padding: 28px;
        transition: all 0.3s ease;
    }

    .info-card:hover {
        background: rgba(99, 102, 241, 0.08);
        transform: translateY(-4px);
    }

    .modal-modern {
        background: rgba(15, 15, 35, 0.95);
        backdrop-filter: blur(10px);
    }

    .modal-content {
        background: var(--card-bg);
        border: 1px solid var(--border);
        border-radius: 24px;
        animation: modalSlideIn 0.4s ease-out;
    }

    @keyframes modalSlideIn {
        from {
            opacity: 0;
            transform: scale(0.9);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    .form-input, .form-select, .form-textarea {
        background: rgba(99, 102, 241, 0.05);
        border: 1px solid var(--border);
        border-radius: 12px;
        padding: 12px 16px;
        color: var(--text-primary);
        transition: all 0.3s ease;
    }

    .form-input:focus, .form-select:focus, .form-textarea:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
    }

    .alert-modern {
        padding: 16px 24px;
        border-radius: 16px;
        margin-bottom: 24px;
        animation: slideIn 0.5s ease-out;
    }

    @keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(50px);
        }
    }
</style>
{% endblock %}

{% block content %}
<div class="animated-background">
    <div class="gradient-orb orb-1"></div>
    <div class="gradient-orb orb-2"></div>
</div>

<div class="max-w-4xl mx-auto px-4 py-8">
    {% if app.request.query.get('success') == 'applied' %}
        <div class="alert-modern" style="background: linear-gradient(135deg, rgba(16, 185, 129, 0.2) 0%, rgba(6, 182, 212, 0.2) 100%); border: 1px solid rgba(16, 185, 129, 0.3); color: var(--success);">
            ‚úì Application submitted successfully!
        </div>
    {% endif %}

    <div class="job-card-modern mb-8">
        <div class="job-header">
            <div class="flex flex-col md:flex-row justify-between gap-6">
                <div class="flex gap-6">
                    <div class="company-avatar">{{ job.company_name|slice(0,1) }}</div>
                    <div>
                        <h1 class="job-title">{{ job.title }}</h1>
                        <div class="flex items-center mb-3" style="color: var(--text-secondary);">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16"/>
                            </svg>
                            <span class="font-semibold">{{ job.company_name }}</span>
                        </div>
                        <div class="flex gap-4 text-sm" style="color: var(--text-secondary);">
                            <span>üìç {{ job.location }}</span>
                            <span>üìÖ {{ job.created_at|date("F d, Y") }}</span>
                        </div>
                    </div>
                </div>
                <div>
                    {% if hasApplied %}
                        <button disabled class="apply-button">Already Applied</button>
                    {% else %}
                        <button id="applyButton" class="apply-button">Apply Now</button>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="p-8">
            <div class="grid lg:grid-cols-3 gap-8">
                <div class="lg:col-span-2 space-y-8">
                    <section>
                        <h2 class="text-2xl font-bold mb-4" style="color: var(--text-primary);">üìÑ Job Description</h2>
                        <div style="color: var(--text-secondary);">{{ job.description|raw }}</div>
                    </section>

                    <section>
                        <h2 class="text-2xl font-bold mb-4" style="color: var(--text-primary);">üéØ Required Skills</h2>
                        <div class="flex flex-wrap gap-3">
                            {% for skill in job.skills|split(',') %}
                                <span class="skill-tag">{{ skill|trim }}</span>
                            {% endfor %}
                        </div>
                    </section>
                </div>

                <div class="space-y-6">
                    <div class="info-card">
                        <h3 class="font-bold mb-4" style="color: var(--text-primary);">üè¢ Company Info</h3>
                        <div style="color: var(--text-secondary);" class="space-y-2 text-sm">
                            <div>{{ job.company_sector }}</div>
                            <div>üìç {{ job.company_location }}</div>
                            <div>‚úâÔ∏è {{ job.company_email }}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="applicationModal" class="hidden fixed inset-0 modal-modern flex items-center justify-center z-50 p-4">
    <div class="modal-content max-w-md w-full p-6">
        <form method="POST" action="/Job-Dating/public/job/{{ job.id }}/apply">
            <h3 class="text-xl font-bold mb-4" style="color: var(--text-primary);">Apply for Position</h3>
            <div class="space-y-4">
                <input type="text" name="first_name" placeholder="First Name" required class="form-input w-full">
                <input type="text" name="last_name" placeholder="Last Name" required class="form-input w-full">
                <input type="email" name="email" placeholder="Email" required class="form-input w-full" value="{{ user.email }}">
                <select name="specialization" required class="form-select w-full">
                    <option value="">Select Specialization</option>
                    <option>Full Stack Development</option>
                    <option>Data Science</option>
                    <option>UI/UX Design</option>
                </select>
                <textarea name="motivational_message" rows="4" placeholder="Why this position?" required class="form-textarea w-full"></textarea>
            </div>
            <div class="mt-6 flex gap-3 justify-end">
                <button type="button" id="closeModal" class="px-4 py-2 rounded-lg" style="background: rgba(160, 160, 160, 0.2); color: var(--text-secondary);">Cancel</button>
                <button type="submit" class="apply-button">Submit</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
    const modal = document.getElementById('applicationModal');
    document.getElementById('applyButton')?.addEventListener('click', () => modal.classList.remove('hidden'));
    document.getElementById('closeModal')?.addEventListener('click', () => modal.classList.add('hidden'));
    modal?.addEventListener('click', (e) => { if (e.target === modal) modal.classList.add('hidden'); });
</script>
{% endblock %}