{% extends "layout.twig" %}

{% block title %}Job Offers - YouCode Job Dating{% endblock %}

{% block styles %}
<style>
    :root {
        --primary: #6366f1;
        --secondary: #8b5cf6;
        --dark-bg: #0f0f23;
        --card-bg: #1a1a2e;
        --card-hover: #25253f;
        --text-primary: #e0e0e0;
        --text-secondary: #a0a0a0;
        --border: #2a2a4a;
        --cyan: #06b6d4;
    }

    body { background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 100%); }

    .animated-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        overflow: hidden;
    }

    .gradient-orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.4;
        animation: float 20s infinite ease-in-out;
    }

    .orb-1 {
        width: 500px;
        height: 500px;
        background: radial-gradient(circle, var(--primary) 0%, transparent 70%);
        top: -10%;
        left: -10%;
    }

    .orb-2 {
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, var(--cyan) 0%, transparent 70%);
        bottom: -10%;
        right: -10%;
        animation-delay: -7s;
    }

    @keyframes float {
        0%, 100% { transform: translate(0, 0); }
        25% { transform: translate(50px, -50px); }
        50% { transform: translate(-30px, 50px); }
        75% { transform: translate(40px, 30px); }
    }

    .header-modern {
        margin-bottom: 40px;
        animation: slideDown 0.6s ease-out;
    }

    .header-content {
        padding: 40px;
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);
        border-radius: 20px;
        border: 1px solid var(--border);
        text-align: center;
    }

    .header-content h1 {
        font-size: 36px;
        margin: 0 0 8px 0;
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    @keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }
    }

    .job-card {
        background: var(--card-bg);
        border: 1px solid var(--border);
        border-radius: 20px;
        padding: 28px;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        animation: fadeInUp 0.5s ease-out;
        animation-fill-mode: both;
        position: relative;
        overflow: hidden;
    }

    .job-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--primary), var(--secondary));
        transform: scaleX(0);
        transition: transform 0.4s ease;
    }

    .job-card:hover::before {
        transform: scaleX(1);
    }

    .job-card:hover {
        transform: translateY(-8px);
        background: var(--card-hover);
        box-shadow: 0 20px 60px rgba(99, 102, 241, 0.2);
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
    }

    .job-card:nth-child(1) { animation-delay: 0.1s; }
    .job-card:nth-child(2) { animation-delay: 0.2s; }
    .job-card:nth-child(3) { animation-delay: 0.3s; }
    .job-card:nth-child(4) { animation-delay: 0.4s; }
    .job-card:nth-child(5) { animation-delay: 0.5s; }
    .job-card:nth-child(6) { animation-delay: 0.6s; }

    .company-avatar {
        width: 56px;
        height: 56px;
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        font-weight: bold;
        color: white;
        transition: all 0.3s ease;
    }

    .job-card:hover .company-avatar {
        transform: scale(1.1) rotate(5deg);
    }

    .job-title {
        font-size: 20px;
        font-weight: 800;
        background: linear-gradient(135deg, var(--text-primary) 0%, var(--cyan) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        transition: all 0.3s ease;
    }

    .contract-badge {
        padding: 6px 16px;
        border-radius: 10px;
        font-size: 12px;
        font-weight: 700;
        text-transform: uppercase;
        background: linear-gradient(135deg, rgba(6, 182, 212, 0.2) 0%, rgba(20, 184, 166, 0.2) 100%);
        border: 2px solid rgba(6, 182, 212, 0.3);
        color: var(--cyan);
    }

    .skill-tag {
        padding: 6px 12px;
        border-radius: 8px;
        background: rgba(99, 102, 241, 0.1);
        border: 1px solid rgba(99, 102, 241, 0.2);
        color: var(--text-secondary);
        font-size: 12px;
    }

    .view-button {
        padding: 12px 24px;
        border-radius: 12px;
        font-weight: 700;
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        color: white;
        text-decoration: none;
        transition: all 0.4s ease;
        display: inline-block;
    }

    .view-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(99, 102, 241, 0.4);
    }

    .empty-state {
        background: var(--card-bg);
        border: 1px solid var(--border);
        border-radius: 20px;
        padding: 60px 40px;
        text-align: center;
    }
</style>
{% endblock %}

{% block content %}
<div class="animated-background">
    <div class="gradient-orb orb-1"></div>
    <div class="gradient-orb orb-2"></div>
</div>

<div class="max-w-6xl mx-auto px-6 pb-12 pt-8">
    <div class="header-modern">
        <div class="header-content">
            <h1>ðŸŽ¯ Job Opportunities</h1>
            <p style="color: var(--text-secondary); font-size: 14px; margin: 0;">
                Discover your next career opportunity
            </p>
        </div>
    </div>

    <div id="jobsContainer" class="grid grid-cols-1 gap-6">
        {% for job in jobs %}
            <div class="job-card">
                <div class="flex items-start justify-between mb-4">
                    <div class="flex gap-4 flex-1">
                        <div class="company-avatar">
                            {{ job.company_name|slice(0,1)|default('C') }}
                        </div>
                        <div class="flex-1">
                            <h2 class="job-title mb-1">{{ job.title }}</h2>
                            <p style="color: var(--text-secondary); font-size: 14px; margin-bottom: 4px;">
                                <span class="font-semibold">{{ job.company_name|default('Company') }}</span>
                                <span class="mx-2">â€¢</span>
                                <span>{{ job.location }}</span>
                            </p>
                        </div>
                    </div>
                    <span class="contract-badge">
                        {{ job.contract_type }}
                    </span>
                </div>

                <div class="mb-4">
                    <p style="color: var(--text-secondary); font-size: 14px; line-height: 1.6;" class="line-clamp-2">
                        {{ job.description|striptags }}
                    </p>
                </div>

                <div class="flex flex-wrap gap-2 mb-6">
                    {% for skill in job.skills|split(',') %}
                        {% if loop.index <= 5 %}
                            <span class="skill-tag">#{{ skill|trim }}</span>
                        {% endif %}
                    {% endfor %}
                    {% if job.skills|split(',')|length > 5 %}
                        <span class="skill-tag">+{{ job.skills|split(',')|length - 5 }} more</span>
                    {% endif %}
                </div>

                <div class="flex justify-between items-center pt-4" style="border-top: 1px solid var(--border);">
                    <span style="color: var(--text-secondary); font-size: 12px; font-style: italic;">
                        ðŸ“… Posted {{ job.created_at|date("d M Y") }}
                    </span>
                    <a href="job/{{ job.id }}" class="view-button">
                        View Details â†’
                    </a>
                </div>
            </div>
        {% else %}
            <div class="empty-state">
                <div style="font-size: 48px; margin-bottom: 16px;">ðŸ“­</div>
                <h3 style="color: var(--text-primary); font-size: 20px; font-weight: 700; margin-bottom: 8px;">
                    No Job Offers Found
                </h3>
                <p style="color: var(--text-secondary);">
                    Check back later for new opportunities
                </p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}