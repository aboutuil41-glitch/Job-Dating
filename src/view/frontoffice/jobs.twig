{% extends "layout.twig" %}

{% block title %}Offres d'emploi - Job Dating{% endblock %}

{% block content %}
    <div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
        <div class="max-w-6xl mx-auto px-6 pb-12 flex flex-col md:flex-row gap-8">
            <main class="w-full">
                <div class="mb-8">
                    <h1 class="text-3xl font-bold text-gray-900 mb-4">Offres d'emploi</h1>
                </div>

                <div id="jobsContainer" class="grid grid-cols-1 gap-6">
                    {% for job in jobs %}
                        <div class="job-card bg-white p-6 rounded-xl shadow-sm border border-transparent hover:border-blue-300 transition-all group">
                            <div class="flex items-start justify-between">
                                <div class="flex gap-4">
                                    <div class="w-14 h-14 bg-gray-100 rounded-lg flex items-center justify-center text-xl font-bold text-blue-600">
                                        {{ job.company_name|slice(0,1)|default('C') }}
                                    </div>
                                    <div>
                                        <h2 class="text-xl font-bold text-gray-900 group-hover:text-blue-600 transition">{{ job.title }}</h2>
                                        <p class="text-gray-600 font-medium">{{ job.company_name|default('Company') }} • <span class="text-gray-400 font-normal">{{ job.location }}</span></p>
                                    </div>
                                </div>
                                <span class="bg-blue-50 text-blue-700 px-3 py-1 rounded-full text-xs font-bold uppercase">
                                    {{ job.contract_type }}
                                </span>
                            </div>

                            <div class="mt-4">
                                <p class="text-gray-600 line-clamp-2 text-sm">
                                    {{ job.description|striptags }}
                                </p>
                            </div>

                            <div class="mt-4 flex flex-wrap gap-2">
                                {% for skill in job.skills|split(',') %}
                                    <span class="bg-gray-100 text-gray-600 px-2 py-1 rounded text-xs">#{{ skill|trim }}</span>
                                {% endfor %}
                            </div>

                            <div class="mt-6 pt-4 border-t border-gray-50 flex justify-between items-center">
                                <span class="text-gray-400 text-xs italic">Posted {{ job.created_at|date("d M Y") }}</span>
                                <a href="job/{{ job.id }}" class="bg-gray-900 text-white px-5 py-2 rounded-lg text-sm font-semibold hover:bg-blue-600 transition">
                                    View Details
                                </a>
                            </div>
                        </div>
                    {% else %}
                        <div class="bg-white p-12 text-center rounded-xl shadow-sm">
                            <p class="text-gray-500">Aucune offre d'emploi trouvée.</p>
                        </div>
                    {% endfor %}
                </div>
            </main>
        </div>
    </div>
{% endblock %}