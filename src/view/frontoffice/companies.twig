{% extends "layout.twig" %}
{% block title %}Entreprises Partenaires - YouCode Job Dating{% endblock %}
{% block content %}
    <div class="bg-gray-50 dark:bg-gray-900 min-h-screen">
        <!-- Hero Section -->
        <div class="bg-gradient-to-r from-blue-600 to-purple-600 py-12 px-6">
            <div class="max-w-6xl mx-auto text-center">
                <h1 class="text-3xl md:text-4xl font-extrabold text-white mb-4">
                    Entreprises Partenaires
                </h1>
                <p class="text-blue-100 text-lg mb-6">
                    Découvrez les entreprises qui font confiance aux talents YouCode
                </p>

                <!-- Stats -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8 max-w-4xl mx-auto">
                    <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 text-center">
                        <div class="text-3xl font-bold text-white">{{ companies|length }}</div>
                        <div class="text-blue-100 text-sm">Entreprises</div>
                    </div>
                    <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 text-center">
                        <div class="text-3xl font-bold text-white">{{ total_jobs }}</div>
                        <div class="text-blue-100 text-sm">Offres actives</div>
                    </div>
                    <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 text-center">
                        <div class="text-3xl font-bold text-white">{{ total_hires }}</div>
                        <div class="text-blue-100 text-sm">Talents recrutés</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search and Filter Bar -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex flex-col md:flex-row gap-4 items-center justify-between">
                <!-- Search -->
                <div class="w-full md:w-1/3">
                    <div class="relative">
                        <input type="text" id="companySearch"
                               placeholder="Rechercher une entreprise..."
                               class="w-full pl-12 pr-4 py-3 rounded-full border border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent">
                        <span class="absolute left-4 top-3.5 text-gray-400">
                        <i class="fas fa-search"></i>
                    </span>
                    </div>
                </div>

                <!-- Industry Filter -->
                <div class="w-full md:w-1/4">
                    <select id="industryFilter" class="w-full border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white rounded-lg p-3 text-sm focus:ring-blue-500 focus:border-blue-500">
                        <option value="">Tous les secteurs</option>
                        {% for industry in industries|default(['Technologie', 'Finance', 'Santé', 'Éducation', 'Commerce', 'Services', 'Industrie', 'Consulting']) %}
                            <option value="{{ industry }}">{{ industry }}</option>
                        {% endfor %}
                    </select>
                </div>

                <!-- Size Filter -->
                <div class="w-full md:w-1/4">
                    <select id="sizeFilter" class="w-full border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white rounded-lg p-3 text-sm focus:ring-blue-500 focus:border-blue-500">
                        <option value="">Toutes les tailles</option>
                        <option value="startup">Startup (1-50)</option>
                        <option value="small">PME (51-200)</option>
                        <option value="medium">Moyenne (201-1000)</option>
                        <option value="large">Grande (>1000)</option>
                    </select>
                </div>

                <!-- Sort -->
                <div class="w-full md:w-auto">
                    <select id="sortFilter" class="w-full border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white rounded-lg p-3 text-sm focus:ring-blue-500 focus:border-blue-500">
                        <option value="name">Trier par: Nom</option>
                        <option value="jobs">Plus d'offres</option>
                        <option value="recent">Plus récent</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Companies Grid -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
            {% if companies|length > 0 %}
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="companiesContainer">
                    {% for company in companies %}
                        <div class="company-card bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 hover:shadow-xl transition-all duration-300 overflow-hidden group">
                            <!-- Company Header -->
                            <div class="p-6">
                                <div class="flex items-start justify-between mb-4">
                                    <div class="flex items-center space-x-4">
                                        <div class="w-16 h-16 rounded-xl bg-gradient-to-br from-blue-100 to-purple-100 dark:from-blue-900/30 dark:to-purple-900/30 flex items-center justify-center text-2xl font-bold text-blue-600 dark:text-blue-400">
                                            {{ company.name|slice(0,2)|upper }}
                                        </div>
                                        <div>
                                            <h3 class="text-xl font-bold text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition">
                                                {{ company.name }}
                                            </h3>
                                            <div class="flex items-center mt-1">
                                            <span class="text-sm text-gray-600 dark:text-gray-400">
                                                <i class="fas fa-map-marker-alt mr-2"></i>
                                                {{ company.location|default('Maroc') }}
                                            </span>
                                            </div>
                                        </div>
                                    </div>

                                    <span class="bg-green-50 dark:bg-green-900/30 text-green-700 dark:text-green-400 px-3 py-1 rounded-full text-xs font-semibold">
                                    {{ company.active_jobs|default(0) }} offres
                                </span>
                                </div>

                                <!-- Company Description -->
                                <p class="text-gray-600 dark:text-gray-300 text-sm line-clamp-3 mb-4">
                                    {{ company.description|default('Entreprise partenaire de YouCode, spécialisée dans le recrutement de talents tech.') }}
                                </p>

                                <!-- Company Info -->
                                <div class="space-y-3 mb-4">
                                    <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                                        <i class="fas fa-industry w-5 mr-3"></i>
                                        <span>{{ company.industry|default('Technologie') }}</span>
                                    </div>
                                    <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                                        <i class="fas fa-users w-5 mr-3"></i>
                                        <span>{{ company.size|default('50-200') }} employés</span>
                                    </div>
                                    <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                                        <i class="fas fa-calendar-alt w-5 mr-3"></i>
                                        <span>Partenaire depuis {{ company.partner_since|default('2023') }}</span>
                                    </div>
                                </div>

                                <!-- Skills Tags -->
                                <div class="mb-4">
                                    <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Recherche des profils</h4>
                                    <div class="flex flex-wrap gap-2">
                                        {% for skill in company.skills_needed|default(['Développement Web', 'Data Science', 'UX/UI Design', 'Marketing Digital'])|slice(0, 3) %}
                                            <span class="bg-blue-50 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 px-2 py-1 rounded text-xs">
                                            {{ skill }}
                                        </span>
                                        {% endfor %}
                                        {% if company.skills_needed|default([])|length > 3 %}
                                            <span class="text-gray-400 text-xs">+{{ company.skills_needed|default([])|length - 3 }} plus</span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>

                            <!-- Company Footer -->
                            <div class="bg-gray-50 dark:bg-gray-900/50 px-6 py-4 border-t border-gray-200 dark:border-gray-700">
                                <div class="flex justify-between items-center">
                                    <div class="flex items-center space-x-2">
                                        <div class="flex -space-x-2">
                                            {% for i in 1..3 %}
                                                <div class="w-8 h-8 rounded-full border-2 border-white dark:border-gray-800 bg-gradient-to-br from-blue-400 to-purple-400 flex items-center justify-center text-xs text-white font-bold">
                                                    {{ random(['JD', 'MA', 'YR', 'YC'])|first }}
                                                </div>
                                            {% endfor %}
                                        </div>
                                        <span class="text-xs text-gray-500 dark:text-gray-400">
                                        {{ company.hired_students|default(random(5, 50)) }} talents YouCode
                                    </span>
                                    </div>
                                    <a href="/company/{{ company.id|default(loop.index) }}"
                                       class="bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-semibold hover:bg-blue-700 transition flex items-center">
                                        Voir détails
                                        <i class="fas fa-arrow-right ml-2 text-xs"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <!-- No Results -->
                <div id="noResults" class="hidden text-center py-12">
                    <div class="bg-white dark:bg-gray-800 p-12 rounded-xl shadow-sm">
                        <i class="fas fa-building text-4xl text-gray-300 dark:text-gray-600 mb-4"></i>
                        <h3 class="text-xl font-semibold text-gray-700 dark:text-gray-300 mb-2">
                            Aucune entreprise trouvée
                        </h3>
                        <p class="text-gray-500 dark:text-gray-400">
                            Aucune entreprise ne correspond à vos critères de recherche.
                        </p>
                    </div>
                </div>
            {% else %}
                <!-- Empty State -->
                <div class="bg-white dark:bg-gray-800 p-12 rounded-xl shadow-sm text-center">
                    <i class="fas fa-building text-4xl text-gray-300 dark:text-gray-600 mb-4"></i>
                    <h3 class="text-xl font-semibold text-gray-700 dark:text-gray-300 mb-2">
                        Aucune entreprise disponible
                    </h3>
                    <p class="text-gray-500 dark:text-gray-400 mb-6">
                        Aucune entreprise n'est actuellement partenaire.
                    </p>
                    <a href="/contact" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                        <i class="fas fa-handshake mr-2"></i>
                        Devenir partenaire
                    </a>
                </div>
            {% endif %}
        </div>

        <!-- Featured Companies Section -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
            <div class="bg-gradient-to-r from-blue-50 to-purple-50 dark:from-gray-800 dark:to-gray-900 rounded-2xl p-8">
                <div class="text-center mb-8">
                    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
                        Entreprises vedettes
                    </h2>
                    <p class="text-gray-600 dark:text-gray-400">
                        Découvrez nos partenaires les plus actifs
                    </p>
                </div>

                <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                    {% for company in companies|slice(0, 8) %}
                        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 text-center hover:shadow-lg transition-shadow">
                            <div class="w-16 h-16 mx-auto rounded-xl bg-gradient-to-br from-blue-100 to-purple-100 dark:from-blue-900/30 dark:to-purple-900/30 flex items-center justify-center text-xl font-bold text-blue-600 dark:text-blue-400 mb-4">
                                {{ company.name|slice(0,2)|upper }}
                            </div>
                            <h4 class="font-semibold text-gray-900 dark:text-white mb-1">
                                {{ company.name }}
                            </h4>
                            <div class="text-sm text-gray-500 dark:text-gray-400 mb-3">
                                {{ company.active_jobs|default(0) }} offres
                            </div>
                            <div class="text-xs text-green-600 dark:text-green-400 font-medium">
                                <i class="fas fa-user-check mr-1"></i>
                                {{ company.hired_students|default(random(10, 30)) }} recrutés
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <!-- CTA Section -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
            <div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-2xl p-8 md:p-12 text-center text-white">
                <h2 class="text-2xl md:text-3xl font-bold mb-4">
                    Votre entreprise cherche des talents tech ?
                </h2>
                <p class="text-blue-100 mb-6 max-w-2xl mx-auto">
                    Rejoignez notre réseau d'entreprises partenaires et accédez aux meilleurs talents formés par YouCode.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="/contact" class="bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-blue-50 transition">
                        Devenir partenaire
                    </a>
                    <a href="/offres" class="bg-transparent border-2 border-white text-white px-6 py-3 rounded-lg font-semibold hover:bg-white/10 transition">
                        Voir les offres
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script>
        $(document).ready(function() {
            // Search functionality
            function filterCompanies() {
                const searchText = $('#companySearch').val().toLowerCase();
                const industry = $('#industryFilter').val();
                const size = $('#sizeFilter').val();
                const sort = $('#sortFilter').val();

                let visibleCompanies = 0;

                $('.company-card').each(function() {
                    const companyName = $(this).find('h3').text().toLowerCase();
                    const companyIndustry = $(this).find('.fa-industry').next().text();
                    const companySize = $(this).find('.fa-users').next().text().toLowerCase();
                    const companyJobs = parseInt($(this).find('.bg-green-50').text());

                    // Check search text
                    const matchesSearch = searchText === '' || companyName.includes(searchText);

                    // Check industry filter
                    const matchesIndustry = industry === '' || companyIndustry === industry;

                    // Check size filter
                    let matchesSize = true;
                    if (size) {
                        if (size === 'startup') matchesSize = companySize.includes('1-50');
                        else if (size === 'small') matchesSize = companySize.includes('51-200');
                        else if (size === 'medium') matchesSize = companySize.includes('201-1000');
                        else if (size === 'large') matchesSize = companySize.includes('>1000');
                    }

                    if (matchesSearch && matchesIndustry && matchesSize) {
                        $(this).show();
                        visibleCompanies++;
                    } else {
                        $(this).hide();
                    }
                });

                // Sort companies
                if (sort === 'jobs') {
                    const container = $('#companiesContainer');
                    const cards = container.children('.company-card').get();

                    cards.sort(function(a, b) {
                        const jobsA = parseInt($(a).find('.bg-green-50').text());
                        const jobsB = parseInt($(b).find('.bg-green-50').text());
                        return jobsB - jobsA;
                    });

                    $.each(cards, function(idx, itm) { container.append(itm); });
                } else if (sort === 'name') {
                    const container = $('#companiesContainer');
                    const cards = container.children('.company-card').get();

                    cards.sort(function(a, b) {
                        const nameA = $(a).find('h3').text().toUpperCase();
                        const nameB = $(b).find('h3').text().toUpperCase();
                        return nameA.localeCompare(nameB);
                    });

                    $.each(cards, function(idx, itm) { container.append(itm); });
                }

                // Show/hide no results message
                if (visibleCompanies === 0) {
                    $('#noResults').show();
                } else {
                    $('#noResults').hide();
                }
            }

            // Event listeners for filters
            $('#companySearch, #industryFilter, #sizeFilter, #sortFilter').on('keyup change', function() {
                filterCompanies();
            });

            // Initialize
            filterCompanies();

            // Company card hover effects
            $('.company-card').hover(
                function() {
                    $(this).addClass('transform -translate-y-1');
                },
                function() {
                    $(this).removeClass('transform -translate-y-1');
                }
            );
        });
    </script>
{% endblock %}