{% extends "layout.twig" %}
{% block title %} Find Your opportunite - youcode job datin {% endblock %}
{% block content %}
    <div class="bg-gray-50 min-h-screen">
        <div class="bg-blue-700 py-12 px-6 mb-8">
            <div class="max-w-6xl mx-auto text-center">
                <h1 class="text-3xl md:text-4xl font-extrabold text-white mb-4">
                    Ready for your next challenge, Apprenant?
                </h1>
                <p class="text-blue-100 text-lg mb-8">Browse and apply to exclusive offers from YouCode partners.</p>

                <div class="max-w-2xl mx-auto relative">
                    <input type="text" id="jobSearch"
                           placeholder="Search by title, company, or keywords..."
                           class="w-full pl-12 pr-4 py-4 rounded-full shadow-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
                    <span class="absolute left-4 top-4 text-gray-400">üîç</span>
                </div>
            </div>
        </div>

        <div class="max-w-6xl mx-auto px-6 pb-12 flex flex-col md:flex-row gap-8">

            <aside class="w-full md:w-1/4">
                <div class="bg-white p-6 rounded-xl shadow-sm sticky top-6">
                    <h3 class="font-bold text-gray-800 mb-4 flex items-center">
                        <span class="mr-2">üìÇ</span> Filters
                    </h3>

                    <form id="filterForm" class="space-y-6">
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Company</label>
                            <select name="company" class="w-full border-gray-200 rounded-lg text-sm focus:ring-blue-500">
                                <option value="">All Companies</option>
                                {% for company in companies %}
                                    <option value="{{ company.id }}">{{ company.name }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Contract Type</label>
                            <div class="space-y-2">
                                {% for type in ['CDI', 'CDD', 'Internship', 'Freelance'] %}
                                    <label class="flex items-center text-sm text-gray-600">
                                        <input type="checkbox" name="contract[]" value="{{ type }}" class="rounded text-blue-600 mr-2">
                                        {{ type }}
                                    </label>
                                {% endfor %}
                            </div>
                        </div>

                        <button type="reset" class="text-sm text-blue-600 hover:text-blue-800 font-medium">Clear all filters</button>
                    </form>
                </div>
            </aside>

            <main class="w-full md:w-3/4">
                <div id="jobsContainer" class="grid grid-cols-1 gap-6">
                    {% for job in jobs %}
                        <div class="job-card bg-white p-6 rounded-xl shadow-sm border border-transparent hover:border-blue-300 transition-all group">
                            <div class="flex items-start justify-between">
                                <div class="flex gap-4">
                                    <div class="w-14 h-14 bg-gray-100 rounded-lg flex items-center justify-center text-xl font-bold text-blue-600">
                                        {{ job.company_name|slice(0,1) }}
                                    </div>
                                    <div>
                                        <h2 class="text-xl font-bold text-gray-900 group-hover:text-blue-600 transition">{{ job.title }}</h2>
                                        <p class="text-gray-600 font-medium">{{ job.company_name }} ‚Ä¢ <span class="text-gray-400 font-normal">{{ job.location }}</span></p>
                                    </div>
                                </div>
                                <span class="bg-blue-50 text-blue-700 px-3 py-1 rounded-full text-xs font-bold uppercase">
                            {{ job.contract_type }}
                        </span>
                            </div>

                            <div class="mt-4">
                                <p class="text-gray-600 line-clamp-2 text-sm">
                                    {{ job.description|striptags }}
                                </p>
                            </div>

                            <div class="mt-4 flex flex-wrap gap-2">
                                {% for skill in job.skills|split(',') %}
                                    <span class="bg-gray-100 text-gray-600 px-2 py-1 rounded text-xs">#{{ skill|trim }}</span>
                                {% endfor %}
                            </div>

                            <div class="mt-6 pt-4 border-t border-gray-50 flex justify-between items-center">
                                <span class="text-gray-400 text-xs italic">Posted {{ job.created_at|date("d M Y") }}</span>
                                <a href="job/{{ job.id }}" class="bg-gray-900 text-white px-5 py-2 rounded-lg text-sm font-semibold hover:bg-blue-600 transition">
                                View Details
                                </a>
                            </div>
                        </div>
                    {% else %}
                        <div class="bg-white p-12 text-center rounded-xl shadow-sm">
                            <p class="text-gray-500">No offers matching your criteria were found.</p>
                        </div>
                    {% endfor %}
                </div>
            </main>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            // Basic AJAX logic for Module 6 (Real-time Search)
            $('#jobSearch, #filterForm input, #filterForm select').on('keyup change', function() {
                const query = $('#jobSearch').val() || '';
                const formData = $('#filterForm').serialize();

                // This would call your JobController search method
                $.ajax({
                    url: '/jobs/search',
                    method: 'GET',
                    data: formData + '&q=' + query,
                    dataType: 'json',
                    success: function(jobs) {
                        updateJobContainer(jobs);
                    }
                    error: function ()
                    {
                        console.log('search fail');
                    }
                });
            });
        });
        function  updateJobContainer(jobs)
        {
